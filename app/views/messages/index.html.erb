<body class="forum">
  <div class="messagehome">
<div class="col-md-8"
<div class="message">
</div>
</div>
<div class="col-md-6 pull-left">
<%= link_to "New Message", new_message_path, class: "btn btn-default pull-left" %>
</div>
<% @messages.each do |message| %>
<div class="col-md-6">
  <div class="message">
<h2 class="message-title"><%= message.title %></h2>
<%= link_to "View Message", message_path(message), class: "btn btn-default" %>
</div>
</div>
<% end %>
</div>
</body>
